	private Game getGame(OneRoom oneRoom) {
		Game game = GameManager.getGameWithRoomNumber(oneRoom.getId()+"");
		if(game!=null){
			return game;
		}else{
			game = new Game(oneRoom);//创建一个游戏
			GameManager.addGameMap(oneRoom.getId()+"", game);//用 gameMap管理这个游戏
			return game;
		}
	}
	
	
	
